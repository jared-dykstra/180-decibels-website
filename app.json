{
  "buildpacks": [
    {
      "url": "https://github.com/jontewks/puppeteer-heroku-buildpack.git"
    },
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-google-chrome"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql"
    }
  ],
  "env": {
    "YARN_PRODUCTION": {
      "value": "false"
    }
  },
  "environments": {
    "test": {
      "env": {
        "CI": "true"
      },
      "scripts": {
        "test-setup": "yarn run build",
        "test": "yarn run ci"
      }
    }
  }
}
